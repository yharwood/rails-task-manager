<div class="container mt-5">
  <h1>Index</h1>
  <ul>
    <% @tasks.each do |task|  %>
      <li>
        <p>
          <% if task.completed? %>
            <i class="fa-regular fa-square-check"></i>
          <% else %>
            <i class="fa-regular fa-square"></i>
          <% end %>
            <%= link_to task.title, task_path(task)  %>
            <%# <i class="fa-solid fa-trash-can"></i> %>
            <%= link_to task_path(task), method: :delete, class: 'btn btn-light', data: { confirm: "Are you sure you want to delete #{task.title}?" } do %>
            <i class="fa-solid fa-trash-can"></i>
          <% end %>
        </p>
      </li>
    <% end %>
  </ul>
  <%= link_to "+ Add a new task ", :new_task %>
</div>
